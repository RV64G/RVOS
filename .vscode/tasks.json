{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-os",
            "type": "shell",
            "command": "make",
            "group": "build"
        },
        {
            "label": "run-os",
            "type": "shell",
            "command": "make",
            "args": ["run"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "build-os"
        },
        {
            "label": "start-qemu",
            "type": "shell",
            "command": "make",
            "args": ["debug"],
            "group": "build",
            "isBackground": true,
            "dependsOn": "build-os"
        },
        {
            "label": "stop-qemu",
            "type": "shell",
            "command": "pkill",
            "args": ["-f", "qemu-system-riscv32"]
        }
    ]
}
